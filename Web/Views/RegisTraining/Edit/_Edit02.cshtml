@using Weable.TMS.Model.Enumeration
@using cntr = Weable.TMS.Web.Controllers.RegisTrainingController
@model Weable.TMS.Web.Models.EditRegisTrainingModel

@{

    TimeSpan DiffDate = DateTime.Now.Subtract(Model.BirthDate.HasValue ? Model.BirthDate.Value : DateTime.Now);
    string TotalDays = DiffDate.Days.ToString();
    string Months = ((DiffDate.Days) % 365).ToString();
    string RemainginYears = ((DiffDate.Days) / 365).ToString();
    string RemainingMonths = (Convert.ToInt32(Months) / 31).ToString();
    string RemainingDays = (Convert.ToInt32(Months) % 31).ToString();

}

<!-- Nav tabs -->
<div class="col-12 mb-4">
    <div class="card shadow">
        <div class="card-body">

            <ul class="nav process-model more-icon-preocess mt-2 d-flex justify-content-center" role="tablist">
                <li class="visited">
                    <a href="#tab_01" aria-controls="tab_01" role="tab" data-toggle="tab">
                        <i class="fa fa-id-card" aria-hidden="true"></i>
                        <p>ขั้นตอนที่ 1</p>
                    </a>
                </li>
                <li class="active">
                    <a href="#tab_02" aria-controls="tab_02" role="tab" data-toggle="tab">
                        <i class="fa fa-user-edit" aria-hidden="true"></i>
                        <p>ขั้นตอนที่ 2</p>
                    </a>
                </li>
                <li role="presentation">
                    <a class="disabled">
                        <i class="fa fa-user-check" aria-hidden="true"></i>
