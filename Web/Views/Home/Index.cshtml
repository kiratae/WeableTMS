                                <option value="value">- สถานะโครงการ -</option>
                            </select>
                        </div>
                        <div class="col-sm-6 col-12">
                            <select class="form-control">
                                <option value="value">2562</option>
                            </select>
                        </div>
                    </div>
                    <div class="pt-3">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">ค้นหาข้อมูล</button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

