@using cntr = Weable.TMS.BO.Web.Controllers.TrainingController
@model Weable.TMS.BO.Web.Models.ListTrainingModel

@{
    ViewData["Title"] = "โครงการฝึกอบรม";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">ระบบบันทึกข้อมูลการฝึกอบรม</li>
        <li class="breadcrumb-item active">โครงการฝึกอบรม</li>
    </ol>
</nav>

<div class="card shadow h-100">
    <div class="card-body">
        <form asp-controller="@cntr.Name" asp-action="@cntr.ActionList">
            <div class="form-row">
                <div class="form-group col">
                    <input asp-for="Keyword" placeholder="ชื่อโครงการฝึกอบรม" class="form-control" />
                </div>
                <div class="form-group col">
                    <button class="btn btn-primary float-right"><i class="fa fa-search"></i>&ensp;ค้นหา</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    @if (Model.Trainings.Count == 0)
    {
        <h3 class="text-center pt-3"> ไม่พบข้อมูล !</h3>
    }
    @foreach (var item in Model.Trainings)
    {
        <div class="card bg-primary text-white shadow mb-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-7 text-truncate">
                        <span>@item.Name</span>
                    </div>
                    <div class="col-sm-3 text-center">
                        <span>รวมทั้งหมด @item.AttendeeQty / @item.SeatQty คน</span>
                    </div>
                    <div class="col-sm-2">
                        <div aria-label="tools" class="float-right">
                            <a href="#" class="text-white px-1"><span class="fa fa-file-alt"></span></a>
                            <a asp-action="Edit" asp-route-id="@item.TrainingId" class="text-white px-1"><span class="fa fa-pencil-alt"></span></a>
                            <a href="#" class="text-white px-1"><span class="fa fa-trash-alt"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_Paging", Model)
