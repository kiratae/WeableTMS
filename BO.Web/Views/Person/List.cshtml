@using cntr = Weable.TMS.BO.Web.Controllers.PersonController
@model Weable.TMS.BO.Web.Models.ListPersonModel

@{
    ViewData["Title"] = "ทะเบียนผู้เข้าอบรม";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">การจัดการการฝึกอบรม</li>
        <li class="breadcrumb-item active">ทะเบียนผู้เข้าอบรม</li>
    </ol>
</nav>

<div class="card shadow h-100">
    <div class="card-body">
        <form asp-controller="@cntr.Name" asp-action="@cntr.ActionList" method="get">
            <div class="form-row">
                <div class="form-group col">
                    <input asp-for="CitizenId" placeholder="เลขบัตรประจำตัวประชาชน" class="form-control" />
                </div>
                <div class="form-group col">
                    <input asp-for="FullName" placeholder="ชื่อ - นามสกุล" class="form-control" />
                </div>
                <div class="form-group col">
                    <button class="btn btn-primary float-right"><i class="fa fa-search"></i>&ensp;ค้นหา</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow h-100 mt-3">
    <div class="card-body">
        <div class="table-responsive no-gutters">
            <table class="table table-borderless table-border-bottom">
                <thead class="thead-style">
                    <tr>
                        <th class="text-center" width="10%">ลำดับ</th>
                        <th class="text-center">เลขบัตรประจำตัวประชาชน</th>
                        <th class="text-center">ชื่อ - นามสกุล</th>
                        <th class="text-center">อีเมล</th>
                        <th class="text-center" width="15%">การเข้าฝึกอบรม</th>
                        <th class="text-center" width="15%">เครื่องมือ</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Persons.Count == 0)
                    {
                        <tr role="row">
                            <td colspan="6" class="text-center">ไม่พบข้อมูล !</td>
                        </tr>
                    }
                    @{ int index = 1; }
                    @foreach (var item in Model.Persons)
                    {
                <tr>
                    <td class="text-center">@(index++)</td>
                    <td class="text-center">@item.CitizenId</td>
                    <td class="text-left">@item.Prefix@item.FirstName @item.LastName</td>
                    <td class="text-left">@(string.IsNullOrEmpty(item.Email) ? "-" : item.Email)</td>
                    <td class="text-center">@item.TrainingAmount</td>
                    <td class="text-center">
                        @{ var deleteUrl = Url.Action(@cntr.ActionDelete, @cntr.Name, new { id = item.PersonId }); }
                        <a href="#" class="btn btn-info btn-circle"><i class="fa fa-file-alt"></i></a>
                    </td>
                </tr>
                    }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("_Paging", Model)
    </div>
</div>